{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@ui/*": ["components/ui/*"],
      "@layout/*": ["components/layout/*"],
      "@review/*": ["components/review/*"],
      "@theme/*": ["theme/*"],
      "@lib/*": ["lib/*"]
    },
    "types": ["node", "vitest/globals", "@testing-library/jest-dom"]
  }
}
